---
import Layout from "../layouts/Layout.astro";
import LogoutSection from "../components/LogoutSection/LogoutSection.astro";
import Navigation from "../components/Navigation/Navigation.astro";
import RecomendedProducts from "../components/RecomendedProducts/RecomendedProducts.astro";
import Footer from "../components/Footer/Footer.astro";

import { PRODUCTS_INFORMATION } from "../data/products";

import "./index.module.css";
import ReviewSection from "../components/Reviews/ReviewSection.astro";
---

<Layout title="Welcome to Bellify.">
  <Navigation />
  <ReviewSection />
  <RecomendedProducts
    title="recomendados para ti"
    products={PRODUCTS_INFORMATION}
  />
  <RecomendedProducts
    title="productos que te recomienda"
    products={PRODUCTS_INFORMATION}
    displayAddProducts
    displayCardButtons
  />
  <LogoutSection />
  <Footer />
</Layout>
